<div class="h1 center user_title">KARMACONOMY</div>

<section class="container clearfix mxn3">
  <div>
  <h3 class="h3 center bold deed_heading">ALL DEEDS</h>

      <div class="relative inline-block" data-disclosure>
      <button type="button" class="filter_btn_txt btn btn-primary bg-#FF8A7C">Filter &#9662;</button>
      <div data-details class="absolute left-0 nowrap white bg-white rounded">
        <% @categories.each do |c| %>
          <%= link_to c.title, category_path(c), :class => "btn block dropdown_options" %>
        <% end %>
      </div>
    </div>
    </div>

  <% @deeds.each do |deed| %>
  <div class="col md-col-3 px1 center deed_box">
      <div class="p2 bg-white border rounded deed_links">
        <% if deed.image == nil %>
          <%= image_tag "admin_pic.jpg"%>
        <% else %>
          <%= cl_image_tag(deed.image, :width => 200, :height => 200, :crop => :fill, :class => 'feature deed_pic') %>
        <% end  %>
        <h1 class="h2 mt0 center deed_link_box"><%= link_to(deed.title, deed_path(deed)) %></h1>
      </div>
  </div>
  <% end %>
</section>
